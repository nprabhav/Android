<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorFocusedHighlight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Calculator"
    tools:showIn="@layout/activity_calculator">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:maxLines="4"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="36sp" />

    <Button
        android:id="@+id/but7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/but"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/but2"
        android:background="#3c3f40"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/but2"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/but7"
        android:layout_below="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/but7"
        android:layout_toEndOf="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/but7"
        android:layout_toEndOf="@+id/but2"
        android:background="#3c3f40"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/but"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/but7"
        android:layout_below="@+id/but"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/but"
        android:layout_toEndOf="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/but"
        android:layout_toEndOf="@+id/but2"
        android:background="#3c3f40"
        android:onClick="onClickOperator"
        android:text="*"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/but6"
        android:background="#3c3f40"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/but7"
        android:layout_below="@+id/but6"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickCos"
        android:text="Cos"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/but18"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickTan"
        android:text="Tan"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/but20"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:background="#3c3f40"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but19"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#3c3f40"
        android:onClick="onClickSqrt"
        android:text="Sqrt"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/but17"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3c3f40"
        android:onClick="onClickSin"
        android:text="Sin"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/but16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/but6"
        android:background="#3c3f40"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/but6"
        android:layout_toEndOf="@+id/but7"
        android:background="#3c3f40"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</RelativeLayout>